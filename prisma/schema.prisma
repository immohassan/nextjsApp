// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Credits {
  id        String   @id @default(cuid())
  balance   Int      @default(250)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model TableConfig {
  id            String     @id @default(cuid())
  name          String
  aiPrompt   String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Each TableConfig (spreadsheet) can have many rows
  rows          Tables[]
}

model Tables {
  id                 String   @id @default(cuid())
  firstName          String
  lastName           String
  email              String?
  aiPersonalizedEmail String?
  currentPosition    String
  location           String
  specialities       String   
  profileSummary     String   
  linkedinUrl        String
  companyName        String
  companyDescription String   
  industry           String
  tenureAtCompany    String
  tenureAtPosition   String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // Foreign key to TableConfig
  tableConfigId      String
  tableConfig        TableConfig @relation(fields: [tableConfigId], references: [id], onDelete: Cascade)

}

